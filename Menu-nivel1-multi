def ventanaNivel1():
    global x,y,canvas2,v2,minivan1,minivan2,minivan3,minivan4,minivan5,minivan6,runner1,runner2,runner3,runner4,runner5,runner6,fighter1,fighter2,fighter3,fighter4,fighter5,fighter6,camion1,camion2,camion3,camion4,camion5,camion6,vida1,vida2,vida3,vida4,vida5,vida6
    v2 = tkinter.Toplevel(v1)#Crea la variable SubVentana
    v2.title("Road Fighter -NIVEL 1 SINGLE - WTechnology.co")
    canvas2 = tkinter.Canvas(v2, width=640, height=425)#Crea Widgets
    canvas2.bind("<Key>", key)# Liga el evento key al canvas
    canvas2.focus_set()# Pone el foco en el canvas
    canvas2.pack()#Empaqueta el canvas
    
    canvas2.create_image(320, 212.5, image=fondo) #FONDO ESTÁTICO
    x = canvas2.create_image(350,350,image=carro) # CARRO DEL JUGADOR
    y = canvas2.create_image(320, -6000, image=fondoMov) #FONDO EN MOVIMIENTO
    #----------ENEMIGOS DE LA MINIVAN---------------------
    
    minivan1 = canvas2.create_image(250,-100,image=minivan)
    minivan2 = canvas2.create_image(350,-200,image=minivan)
    minivan3 = canvas2.create_image(250,-300,image=minivan)
    minivan4 = canvas2.create_image(350,-400,image=minivan)
    minivan5 = canvas2.create_image(250,-500,image=minivan)
    minivan6 = canvas2.create_image(350,-600,image=minivan)

    #----------ENEMIGOS DEL RUNNER---------------------

    runner1 = canvas2.create_image(250,-700,image=runner)
    runner2 = canvas2.create_image(350,-800,image=runner)
    runner3 = canvas2.create_image(250,-900,image=runner)
    runner4 = canvas2.create_image(350,-1000,image=runner)
    runner5 = canvas2.create_image(250,-1100,image=runner)
    runner6 = canvas2.create_image(350,-1200,image=runner)

    #----------ENEMIGOS DE LA FIGHTER---------------------
    
    fighter1 = canvas2.create_image(250,-1300,image=fighter)
    fighter2 = canvas2.create_image(250,-1400,image=fighter)
    fighter3 = canvas2.create_image(250,-1500,image=fighter)
    fighter4 = canvas2.create_image(250,-1600,image=fighter)
    fighter5 = canvas2.create_image(250,-1700,image=fighter)
    fighter6 = canvas2.create_image(250,-1800,image=fighter)

    #---------ENEMIGOS DEL CAMION---------------

    camion1 = canvas2.create_image(250,-1900,image=camion)
    camion2 = canvas2.create_image(250,-2000,image=camion)
    camion3 = canvas2.create_image(250,-2100,image=camion)
    camion4 = canvas2.create_image(250,-2200,image=camion)
    camion5 = canvas2.create_image(250,-2300,image=camion)
    camion6 = canvas2.create_image(250,-2400,image=camion)

    #---------VIDA-------------------
    vida1 = canvas2.create_image(250,-2500,image=vida)
    vida2 = canvas2.create_image(250,-2600,image=vida)
    vida3 = canvas2.create_image(250,-2700,image=vida)
    vida4 = canvas2.create_image(250,-2800,image=vida)
    vida5 = canvas2.create_image(250,-2900,image=vida)
    vida6 = canvas2.create_image(250,-3000,image=vida)

    #----------PONER A CORRER LOS ENEMIGOS------------
    movMinivan1()
    movMinivan2()
    movMinivan3()
    movMinivan4()
    movMinivan5()
    movMinivan6()

    movRunner1()
    movRunner2()
    movRunner3()
    movRunner4()
    movRunner5()
    movRunner6()

    movFighter1()
    movFighter2()
    movFighter3()
    movFighter4()
    movFighter5()
    movFighter6()

    movCamion1()
    movCamion2()
    movCamion3()
    movCamion4()
    movCamion5()
    movCamion6()

    movVida1()
    movVida2()
    movVida3()
    movVida4()
    movVida5()
    movVida6()

    movFondo()
    
    v1.iconify()
    

def ventanaNivel1Multi():
    global x,y,canvas3,v3,z,y1
    v3 =tkinter.Toplevel(v1)
    canvas3 = tkinter.Canvas(v3, width=1025, height=425)#Crea Widgets
    canvas3.bind("<Key>", key1)#Liga el evento key al canvas
    canvas3.focus_set()# Pone el foco en el canvas
    canvas3.pack()#Empaqueta el canvas

    canvas3.create_image(512.5, 212.5, image=fondoMulti1) #FONDO ESTÁTICO
    x = canvas3.create_image(350,350,image=carro) # CARRO DEL JUGADOR 1
    z = canvas3.create_image(620,350,image=carro2) # CARRO DEL JUGADOR 2
    y = canvas3.create_image(345, -600, image=fondoMov) #FONDO EN MOVIMIENTO JUGADOR1
    y1 = canvas3.create_image(615, -500, image=fondoMov) #FONDO EN MOVIMIENTO JUGADOR1

    movFondo1Multi1()
    movFondo1Multi2()
    v1.iconify()

    


