#----------------TECLAS NIVEL1 MULTIJUGADOR ----------
def key1(event):
    """
    """
    global x,i,j,y,i1,j1,z
    tecla = repr(event.char)
    print(tecla)
    if(tecla == "'d'"):
        if(i < 30):
            canvas3.delete(x)
            i = i + 10
            x = canvas3.create_image(350+i,350+j,image=carro)
        else:
            canvas3.delete(x)
            x = canvas3.create_image(350+i,350+j,image=choqueizq)            
    if(tecla == "'a'"):
        if(i > -111):
            canvas3.delete(x)
            i = i - 10
            x = canvas3.create_image(350+i,350+j,image=carro)
        else:
            canvas3.delete(x)
            x = canvas3.create_image(350+i,350+j,image=choqueder)

    if(tecla=="'l'"):  
        if(i1 < 30):
            canvas3.delete(z)
            i1 = i1 + 10
            z = canvas3.create_image(620+i1,350+j1,image=carro2)
        else:
            canvas3.delete(z)
            z = canvas3.create_image(620+i1,350+j1,image=choqueizq2)            
    if(tecla == "'j'"):
        if(i1 > -120):
            canvas3.delete(z)
            i1 = i1 - 10
            z = canvas3.create_image(620+i1,350+j,image=carro2)
        else:
            canvas3.delete(z)
            z = canvas3.create_image(620+i1,350+j1,image=choqueder2)


