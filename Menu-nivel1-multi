def manual():
    messagebox.showinfo("Instrucciones de Juego","                         Aprende a jugar ROAD FIGHTER \n \n Selecciona cualquier NIVEL para Un solo jugador o Multijugador \n \n Los controles para el JUGADOR 1: \n Tecla A = carro se mueve a la izquierda \n Tecla D = carro se mueve a la derecha \n \n Los controles para el JUGADOR 2: \n Tecla J = carro se mueve a la izquierda \n Tecla L = carro se mueve a la derecha \n \n La idea del juego es llegar a la meta antes de que se acabe la gasolina esquivando el tráfico y dificultades de la carretera \n \n                                      ¡MUCHA SUERTE! " )

def salida():
    pass


#----------------TECLAS NIVEL1-----------
def key(event):
    """
    """
    global x,i,j,y
    tecla = repr(event.char)
    print(tecla)
    if(tecla == "'d'"):
        if(i < 10):
            canvas2.delete(x)
            i = i + 10
            x = canvas2.create_image(350+i,350+j,image=carro)
        else:
            canvas2.delete(x)
            x = canvas2.create_image(350+i,350+j,image=choqueizq)            
    if(tecla == "'a'"):
        if(i > -140):
            canvas2.delete(x)
            i = i - 10
            x = canvas2.create_image(350+i,350+j,image=carro)
        else:
            canvas2.delete(x)
            x = canvas2.create_image(350+i,350+j,image=choqueder)

#----------------MOVIMIENTO DEL NIVEL 1---------
def movFondo():
    """
    """
    posicion=100
    i=0
    if(i<5):
        canvas2.move(y,0,1)
        i=i+1
        posicion=posicion+1
        v2.after(1,movFondo)

